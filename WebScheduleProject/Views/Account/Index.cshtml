@model LoginUser;
@{
    ViewData["Title"] = "Login";
 }
    <div class="modal modal-sheet position-static d-block bg-body-secondary p-2 py-md-2" tabindex="-1" role="dialog" id="modalSignin">
        <div class="modal-dialog" role="document">
            <div class="modal-content rounded-4 shadow">
                <div class="p-5 pb-4 border-bottom-0">
                    <h1 class="text-center">Sign Up</h1>
                </div>
                <div class="modal-body p-4 pt-0">
                <form method="post" asp-controller="Account" asp-action="Login">
                        <div class="form-floating mb-3">
                        <input type="email" class="form-control rounded-3" id="floatingInput" placeholder="name@example.com" name="Email">
                            <label for="floatingInput">Email address</label>
                        </div>
                        <div class="form-floating mb-3">
                        <input type="password" class="form-control rounded-6" id="floatingPassword" placeholder="Password" name="Password">
                            <label for="floatingPassword">Password</label>
                        </div>
                        <button class="w-100 mb-2 btn btn-lg rounded-3 btn-primary" type="submit">Sign up</button>
                       
                </form>
                     <form>
                        <div class="modal-dialog" role="document">
                            <div class="modal-content rounded-2 shadow">
                            <div class="p-3 pb-2 mb-2 border-bottom-0">
                                <h4>Not a member?</h4>
                                
                                <a class="btn btn-large btn-secondary btn-custom-margin" mt-2 href="Users/Create" tabindex="-1" role="button" aria-disabled="true">Create Account</a>
                              @* @Html.ActionLink("Create User", "Create", "Users") *@
                            </div>
                            </div>
                        </div>
                     </form>
                </div>
            </div>
        </div>
    </div>
